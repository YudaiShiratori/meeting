<article class="container col-md-4 col-xs-4">
  <% flash.each do |key, value| %>
    <p><%= content_tag(:div, value, class: "#{key}") %></p>
  <% end %>
  <h1>ログイン</h1>
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <h5>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </h5>
    <h5>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </h5>
    <h5>
      <%= f.submit "ログイン", class: "btn btn-success" %>
    </h5>
  <% end %>
</article>